{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": false,
    "noEmit": false,
    "target": "es2022",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/index.tsx"],
  "exclude": ["node_modules"]
}
